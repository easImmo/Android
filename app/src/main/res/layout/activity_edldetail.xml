<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout android:layout_weight="1.3"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_equipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edl_equipment"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/equipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/label_equipment"
            android:layout_alignBottom="@+id/label_equipment"/>

        <TextView
            android:id="@+id/label_equipment_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edl_equipment_state"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@+id/equipment"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/equipment_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/label_equipment_state"
            android:layout_alignBottom="@+id/label_equipment_state"/>
    </LinearLayout>
    <LinearLayout android:layout_weight="0.7"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical">
            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dip" />
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>
